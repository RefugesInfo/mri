<Style name="contours10">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<LineSymbolizer stroke="#B7928A" stroke-width="0.4" stroke-opacity="0.4" smooth="1" />
	</Rule>
</Style>
<Style name="contours50">
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom13;
		<LineSymbolizer stroke="#B7928A" stroke-width="0.6" stroke-opacity="0.5" smooth="1" /></Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<LineSymbolizer stroke="#AA837B" stroke-width="0.6" stroke-opacity="0.7" smooth="1" /></Rule>
</Style>
<Style name="contours100">
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom13;
		<LineSymbolizer stroke="#AA837B" stroke-width="0.7" stroke-opacity="0.7" smooth="1" /></Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<LineSymbolizer stroke="#9F7B74" stroke-width="0.7" stroke-opacity="0.7" smooth="1" /></Rule>
</Style>
<Style name="contours-text50">
        <Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
                <TextSymbolizer fontset-name="sans-condensed-bold" fill="#9F7B74" halo-radius="0.5" opacity="0.9" placement="line" size="8.5">[height]</TextSymbolizer>
        </Rule>
</Style>
<Style name="contours-text100">
        <Rule>
		&maxscale_zoom12;
		&minscale_zoom13;
                <TextSymbolizer fontset-name="sans-condensed-bold" fill="#9F7B74" halo-radius="0.5" opacity="0.9" spacing="500" placement="line" size="8.5">[height]</TextSymbolizer>
        </Rule>
        <Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
                <TextSymbolizer fontset-name="sans-condensed-bold" fill="#9F7B74" halo-radius="0.5" opacity="0.9" spacing="300" placement="line" size="8.5">[height]</TextSymbolizer>
        </Rule>
</Style>
<Layer name="contours10">
	<StyleName>contours10</StyleName>
	<Datasource>
      &postgis-settings;
      <Parameter name="table">(select geom,height::integer from contours WHERE height::integer % 10 = 0 AND height::integer % 50 != 0 AND height::integer % 100 != 0) as "contours-10"</Parameter>
	</Datasource>
</Layer>
<Layer name="contours50">
	<StyleName>contours50</StyleName>
	<Datasource>
      &postgis-settings;
      <Parameter name="table">(select geom,height::integer from contours WHERE height::integer % 50 = 0 AND height::integer % 100 != 0) as "contours-50"</Parameter>
	</Datasource>
</Layer>
<Layer name="contours100">
	<StyleName>contours100</StyleName>
	<StyleName>contours-text100</StyleName>
	<Datasource>
      &postgis-settings;
      <Parameter name="table">(select geom,height::integer from contours WHERE height::integer % 100 = 0) as "contours-100"</Parameter>
	</Datasource>
</Layer>
