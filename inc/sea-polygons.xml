<Style name="water_polygons">
    <Rule>
        &maxscale_zoom12;
        <PolygonSymbolizer fill="#514ad8"/><LineSymbolizer stroke="#514ad8" stroke-width="1"/>
    </Rule>
</Style>
<Layer name="water_polygons" status="on">
    <StyleName>water_polygons</StyleName>
    <Datasource>
            <Parameter name="type">shape</Parameter>
            <Parameter name="file">mapnik-data/water-polygons/detailed/water_polygons</Parameter>
    </Datasource>
</Layer>

<Style name="simplified_water_polygons">
    <Rule>
        &minscale_zoom14;
        <PolygonSymbolizer fill="#514ad8"/><LineSymbolizer stroke="#514ad8" stroke-width="1"/>
    </Rule>
</Style>
<Layer name="simplified_water_polygons" status="on">
    <StyleName>simplified_water_polygons</StyleName>
    <Datasource>
        <Parameter name="type">shape</Parameter>
        <Parameter name="file">mapnik-data/water-polygons/simplified/simplified_water_polygons</Parameter>
    </Datasource>
</Layer>
