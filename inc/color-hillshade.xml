<!-- Hillshaded maps, from zoom 1 to 9 merged with colored one, for zoom 10 and more, hillshades only -->
<Style name="hillshade_d64">
	<Rule>
		&maxscale_zoom1;
		&minscale_zoom5;
		<RasterSymbolizer comp-op="grain-merge" opacity="0.9" scaling="bilinear" />
	</Rule>
</Style>
<Layer name="hillshade_d64">
	<StyleName>hillshade_d64</StyleName>
	<Datasource>
		<Parameter name="type">gdal</Parameter>
		<Parameter name="file">hillshade-tiff/hillshade_d64.tif</Parameter>
		<Parameter name="format">tiff</Parameter>
	</Datasource>
</Layer>

